<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:my='urn:import:sandbox.client.widgets'>
    
	<ui:style>
		.contents {
			display: block;
			position:absolute;
			top: 10px;
    		left: 10px;
    		bottom: 10px;
    		right: 10px;
		}
		.tabPanel {
			position:absolute;
			top: 5px;
    		left: 5px;
    		bottom: 5px;
    		right: 5px;
		}
	</ui:style>
	<g:SimplePanel styleName='{style.tabPanel}'>
	    <g:TabLayoutPanel barUnit="PX" barHeight="30" height="100%" width="100%">
	    	<g:tab>
	    		<g:header>Cellular automat</g:header>
	    		<my:AutomatonWidget styleName='{style.contents}'></my:AutomatonWidget>
	    	</g:tab>
	    	<g:tab>
	    		<g:header>Fractal builder</g:header>
	    		<my:FractalWidget styleName='{style.contents}'></my:FractalWidget>
	    	</g:tab>
	    </g:TabLayoutPanel>
	</g:SimplePanel>

</ui:UiBinder>